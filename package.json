{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "format": "prettier --write './**/*'",
    "format:check": "prettier --check './**/*'",
    "lint": "eslint \"./**/*.{js,ts,tsx,jsx}\" --quiet --fix",
    "lint:check": "eslint \"./**/*.{js,ts,tsx,jsx}\" --quiet",
    "check": "npm run format:check && npm run lint:check",
    "check:fix": "npm run format && npm run lint",
    "prepare": "husky install && npx husky add .husky/pre-push 'npm run check:fix'"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.2.0",
    "@types/node": "^12.12.21",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "autoprefixer": "^10.2.5",
    "babel-plugin-macros": "^3.0.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "tailwindcss": "^2.0.4",
    "twin.macro": "^2.3.1",
    "typescript": "^4.2.2"
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  },
  "license": "MIT"
}
